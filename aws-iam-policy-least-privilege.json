{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBApplicationTables",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-users",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-profiles",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-dogs",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeders",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeds",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeds-simple",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-messages",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-message-threads",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-favorites",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-activities",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-kennels",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-litters",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-users/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-profiles/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-dogs/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeders/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeds/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-breeds-simple/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-message-threads/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-favorites/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-kennels/index/*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-litters/index/*"
            ]
        },
        {
            "Sid": "DynamoDBTableManagement",
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeTable",
                "dynamodb:ListTables",
                "dynamodb:CreateTable",
                "dynamodb:UpdateTable",
                "dynamodb:UpdateTimeToLive",
                "dynamodb:DescribeTimeToLive",
                "dynamodb:TagResource",
                "dynamodb:UntagResource",
                "dynamodb:ListTagsOfResource"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-*"
            ]
        },
        {
            "Sid": "DynamoDBListTables",
            "Effect": "Allow",
            "Action": [
                "dynamodb:ListTables"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3ImageBucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::homeforpup-images",
                "arn:aws:s3:::homeforpup-images/*"
            ]
        },
        {
            "Sid": "SESEmailSending",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": [
                "arn:aws:ses:us-east-1:249730500554:identity/*"
            ]
        },
        {
            "Sid": "CognitoUserPoolRead",
            "Effect": "Allow",
            "Action": [
                "cognito-idp:DescribeUserPool",
                "cognito-idp:DescribeUserPoolClient",
                "cognito-idp:ListUsers",
                "cognito-idp:AdminGetUser"
            ],
            "Resource": [
                "arn:aws:cognito-idp:us-east-1:249730500554:userpool/us-east-1_M6uzx1eFZ"
            ]
        },
        {
            "Sid": "CloudWatchLogsForLambda",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:FilterLogEvents",
                "logs:DescribeLogStreams"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/*-development-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/get-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/list-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/create-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/update-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/delete-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/send-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/reply-*:*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/mark-*:*"
            ]
        },
        {
            "Sid": "CloudFormationStackManagement",
            "Effect": "Allow",
            "Action": [
                "cloudformation:CreateStack",
                "cloudformation:UpdateStack",
                "cloudformation:DeleteStack",
                "cloudformation:DescribeStacks",
                "cloudformation:DescribeStackEvents",
                "cloudformation:DescribeStackResources",
                "cloudformation:GetTemplate",
                "cloudformation:ValidateTemplate",
                "cloudformation:CreateChangeSet",
                "cloudformation:DescribeChangeSet",
                "cloudformation:ExecuteChangeSet",
                "cloudformation:DeleteChangeSet",
                "cloudformation:GetTemplateSummary"
            ],
            "Resource": [
                "arn:aws:cloudformation:us-east-1:249730500554:stack/homeforpup-api-*/*",
                "arn:aws:cloudformation:us-east-1:249730500554:stack/HomeForPupApiStack-*/*",
                "arn:aws:cloudformation:us-east-1:249730500554:stack/CDKToolkit/*"
            ]
        },
        {
            "Sid": "CloudFormationListStacks",
            "Effect": "Allow",
            "Action": [
                "cloudformation:ListStacks"
            ],
            "Resource": "*"
        },
        {
            "Sid": "LambdaFunctionManagement",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:UpdateFunctionCode",
                "lambda:UpdateFunctionConfiguration",
                "lambda:DeleteFunction",
                "lambda:GetFunction",
                "lambda:GetFunctionConfiguration",
                "lambda:AddPermission",
                "lambda:RemovePermission",
                "lambda:InvokeFunction",
                "lambda:TagResource",
                "lambda:UntagResource",
                "lambda:PublishVersion",
                "lambda:GetPolicy",
                "lambda:PutFunctionConcurrency"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-1:249730500554:function:*-development-*",
                "arn:aws:lambda:us-east-1:249730500554:function:get-*",
                "arn:aws:lambda:us-east-1:249730500554:function:list-*",
                "arn:aws:lambda:us-east-1:249730500554:function:create-*",
                "arn:aws:lambda:us-east-1:249730500554:function:update-*",
                "arn:aws:lambda:us-east-1:249730500554:function:delete-*",
                "arn:aws:lambda:us-east-1:249730500554:function:send-*",
                "arn:aws:lambda:us-east-1:249730500554:function:reply-*",
                "arn:aws:lambda:us-east-1:249730500554:function:mark-*"
            ]
        },
        {
            "Sid": "LambdaListFunctions",
            "Effect": "Allow",
            "Action": [
                "lambda:ListFunctions"
            ],
            "Resource": "*"
        },
        {
            "Sid": "APIGatewayManagement",
            "Effect": "Allow",
            "Action": [
                "apigateway:GET",
                "apigateway:POST",
                "apigateway:PUT",
                "apigateway:PATCH",
                "apigateway:DELETE",
                "apigateway:UpdateRestApiPolicy"
            ],
            "Resource": [
                "arn:aws:apigateway:us-east-1::/restapis",
                "arn:aws:apigateway:us-east-1::/restapis/*"
            ]
        },
        {
            "Sid": "IAMRoleManagement",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:GetRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:GetRolePolicy",
                "iam:TagRole",
                "iam:UntagRole",
                "iam:UpdateAssumeRolePolicy"
            ],
            "Resource": [
                "arn:aws:iam::249730500554:role/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:role/homeforpup-api-*",
                "arn:aws:iam::249730500554:role/cdk-*"
            ]
        },
        {
            "Sid": "IAMPassRoleToServices",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::249730500554:role/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:role/homeforpup-api-*",
                "arn:aws:iam::249730500554:role/cdk-*"
            ],
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": [
                        "lambda.amazonaws.com",
                        "cloudformation.amazonaws.com",
                        "apigateway.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "IAMPolicyManagement",
            "Effect": "Allow",
            "Action": [
                "iam:CreatePolicy",
                "iam:DeletePolicy",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "iam:ListPolicyVersions"
            ],
            "Resource": [
                "arn:aws:iam::249730500554:policy/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:policy/homeforpup-api-*"
            ]
        },
        {
            "Sid": "CloudWatchLogsManagement",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:DeleteLogGroup",
                "logs:PutRetentionPolicy",
                "logs:DeleteRetentionPolicy",
                "logs:TagLogGroup",
                "logs:UntagLogGroup"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/*-development-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/get-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/list-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/create-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/update-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/delete-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/send-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/reply-*",
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/mark-*"
            ]
        },
        {
            "Sid": "CloudWatchLogsDescribe",
            "Effect": "Allow",
            "Action": [
                "logs:DescribeLogGroups"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CDKBootstrapBucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:GetBucketVersioning"
            ],
            "Resource": [
                "arn:aws:s3:::cdk-*-assets-249730500554-us-east-1",
                "arn:aws:s3:::cdk-*-assets-249730500554-us-east-1/*"
            ]
        },
        {
            "Sid": "SSMParameterAccess",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter"
            ],
            "Resource": [
                "arn:aws:ssm:us-east-1:249730500554:parameter/cdk-bootstrap/*"
            ]
        },
        {
            "Sid": "ECRRepositoryAccess",
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken",
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage"
            ],
            "Resource": "*"
        },
        {
            "Sid": "STSGetCallerIdentity",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity"
            ],
            "Resource": "*"
        }
    ]
}

