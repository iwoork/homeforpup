{
  "name": "homeforpup-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:adopter": "turbo run dev --filter=adopter-app",
    "dev:breeder": "turbo run dev --filter=breeder-app",
    "build:adopter": "turbo run build --filter=adopter-app",
    "build:breeder": "turbo run build --filter=breeder-app"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.5.4",
    "typescript": "^5.6.3"
  }
}