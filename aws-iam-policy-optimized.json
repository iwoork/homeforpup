{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:DescribeTable",
                "dynamodb:ListTables",
                "dynamodb:CreateTable",
                "dynamodb:UpdateTable",
                "dynamodb:UpdateTimeToLive",
                "dynamodb:DescribeTimeToLive",
                "dynamodb:TagResource",
                "dynamodb:UntagResource"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-*",
                "arn:aws:dynamodb:us-east-1:249730500554:table/homeforpup-*/index/*"
            ]
        },
        {
            "Sid": "S3Access",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:GetBucketVersioning"
            ],
            "Resource": [
                "arn:aws:s3:::homeforpup-images",
                "arn:aws:s3:::homeforpup-images/*",
                "arn:aws:s3:::cdk-*-assets-249730500554-us-east-1",
                "arn:aws:s3:::cdk-*-assets-249730500554-us-east-1/*"
            ]
        },
        {
            "Sid": "SESAccess",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": "arn:aws:ses:us-east-1:249730500554:identity/*"
        },
        {
            "Sid": "CognitoAccess",
            "Effect": "Allow",
            "Action": [
                "cognito-idp:DescribeUserPool",
                "cognito-idp:DescribeUserPoolClient",
                "cognito-idp:ListUsers",
                "cognito-idp:AdminGetUser",
                "cognito-idp:AdminUpdateUserAttributes"
            ],
            "Resource": "arn:aws:cognito-idp:us-east-1:249730500554:userpool/us-east-1_M6uzx1eFZ"
        },
        {
            "Sid": "LambdaAccess",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:UpdateFunctionCode",
                "lambda:UpdateFunctionConfiguration",
                "lambda:DeleteFunction",
                "lambda:GetFunction",
                "lambda:GetFunctionConfiguration",
                "lambda:AddPermission",
                "lambda:RemovePermission",
                "lambda:InvokeFunction",
                "lambda:TagResource",
                "lambda:UntagResource",
                "lambda:PublishVersion",
                "lambda:GetPolicy",
                "lambda:PutFunctionConcurrency",
                "lambda:ListFunctions"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-1:249730500554:function:*-development-*",
                "arn:aws:lambda:us-east-1:249730500554:function:get-*",
                "arn:aws:lambda:us-east-1:249730500554:function:list-*",
                "arn:aws:lambda:us-east-1:249730500554:function:create-*",
                "arn:aws:lambda:us-east-1:249730500554:function:update-*",
                "arn:aws:lambda:us-east-1:249730500554:function:delete-*",
                "arn:aws:lambda:us-east-1:249730500554:function:send-*",
                "arn:aws:lambda:us-east-1:249730500554:function:reply-*",
                "arn:aws:lambda:us-east-1:249730500554:function:mark-*"
            ]
        },
        {
            "Sid": "CloudWatchLogsAccess",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:DeleteLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:FilterLogEvents",
                "logs:DescribeLogStreams",
                "logs:DescribeLogGroups",
                "logs:PutRetentionPolicy",
                "logs:DeleteRetentionPolicy",
                "logs:TagLogGroup",
                "logs:UntagLogGroup"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:249730500554:log-group:/aws/lambda/*:*"
            ]
        },
        {
            "Sid": "CloudFormationAccess",
            "Effect": "Allow",
            "Action": [
                "cloudformation:CreateStack",
                "cloudformation:UpdateStack",
                "cloudformation:DeleteStack",
                "cloudformation:DescribeStacks",
                "cloudformation:DescribeStackEvents",
                "cloudformation:DescribeStackResources",
                "cloudformation:GetTemplate",
                "cloudformation:ValidateTemplate",
                "cloudformation:CreateChangeSet",
                "cloudformation:DescribeChangeSet",
                "cloudformation:ExecuteChangeSet",
                "cloudformation:DeleteChangeSet",
                "cloudformation:GetTemplateSummary",
                "cloudformation:ListStacks"
            ],
            "Resource": [
                "arn:aws:cloudformation:us-east-1:249730500554:stack/homeforpup-api-*/*",
                "arn:aws:cloudformation:us-east-1:249730500554:stack/HomeForPupApiStack-*/*",
                "arn:aws:cloudformation:us-east-1:249730500554:stack/CDKToolkit/*"
            ]
        },
        {
            "Sid": "APIGatewayAccess",
            "Effect": "Allow",
            "Action": [
                "apigateway:GET",
                "apigateway:POST",
                "apigateway:PUT",
                "apigateway:PATCH",
                "apigateway:DELETE",
                "apigateway:UpdateRestApiPolicy"
            ],
            "Resource": "arn:aws:apigateway:us-east-1::/restapis*"
        },
        {
            "Sid": "IAMRoleAccess",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:GetRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:GetRolePolicy",
                "iam:TagRole",
                "iam:UntagRole",
                "iam:UpdateAssumeRolePolicy"
            ],
            "Resource": [
                "arn:aws:iam::249730500554:role/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:role/homeforpup-api-*",
                "arn:aws:iam::249730500554:role/cdk-*"
            ]
        },
        {
            "Sid": "IAMPassRole",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": [
                "arn:aws:iam::249730500554:role/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:role/homeforpup-api-*",
                "arn:aws:iam::249730500554:role/cdk-*"
            ],
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": [
                        "lambda.amazonaws.com",
                        "cloudformation.amazonaws.com",
                        "apigateway.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "IAMPolicyAccess",
            "Effect": "Allow",
            "Action": [
                "iam:CreatePolicy",
                "iam:DeletePolicy",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "iam:ListPolicyVersions"
            ],
            "Resource": [
                "arn:aws:iam::249730500554:policy/HomeForPupApiStack-*",
                "arn:aws:iam::249730500554:policy/homeforpup-api-*"
            ]
        },
        {
            "Sid": "SSMAndECRAccess",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ecr:GetAuthorizationToken",
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "sts:GetCallerIdentity"
            ],
            "Resource": "*"
        }
    ]
}

